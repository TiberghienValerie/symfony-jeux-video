{% extends 'layout/front.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="text-center">Pour nous contacter </h1>

        <div class="m-2 container card border-success">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row p-2">
                <div class="col">
                    {{ form_row(form.objet) }}
                </div>
            </div>

            <div class="row p-2">
                <div class="col">
                    {{ form_row(form.message) }}
                </div>
            </div>

            <div class="row p-2">
                <div class="col">
                    {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Submit' }) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>


    </div>
{% endblock %}
