{% extends 'layout/front.html.twig' %}

{% block title %}Ajout d'un topic{% endblock %}

{% block body %}
    <a class="m-2 btn btn-primary" href="{{ path('forum_view', {'id': id}) }}">Retour</a>
    <div class="m-2 container card border-success">
         {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.title) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.pathLogo) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Add' }) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
