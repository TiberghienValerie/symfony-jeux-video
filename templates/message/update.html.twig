{% extends 'layout/front.html.twig' %}

{% block title %}Modification du message {% endblock %}

{% block body %}
    <a class="m-2 btn btn-primary" href="{{ path('topic_view', {'id':topic}) }}">Retour</a>
    <div class="m-2 container card border-success">
         {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.content) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Update' }) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
