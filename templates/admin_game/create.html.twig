{% extends 'layout/back.html.twig' %}
{% block title %}Add a new game {% endblock %}
{% block body %}

<div class="container">
    <a class="btn btn-primary" href="{{ path('admin_game') }}">Retour</a>
    <div class="m-2 container card">
        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.title) }}
            </div>
        </div>
        <div class="row p-2">
            <div class="col">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.pathImg) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.price) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.noteGlobal) }}
                {% for i  in 1..10 %}
                <img width="30px" height="30px" style="float:left;cursor:pointer;" src="{{ asset('build/image/emptystar.jpg') }}" name="star" id="{{ i }}" onmouseover="fillstar(this)" onclick="vote(this,{{ i }})"/>
                {% endfor %}
            </div>
        </div>





        <div class="row p-2">
            <div class="col">
                {{ form_row(form.gameCategory) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.device) }}
            </div>
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Add' }) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>



    <script>
        function vote(Obj, val) {

            var champ = Obj.parentElement.children.namedItem('game_noteGlobal');
            champ.value = val;
            console.log(champ.value);

        }

        function fillstar(Obj){
            var stars=document.getElementsByName(Obj.name);



            for(i=0;i<stars.length;i++){

                if (i<=Obj.id){stars[i].src="{{ asset('build/image/fullstar.jpg') }}"}
                else{stars[i].src="{{ asset('build/image/emptystar.jpg') }}"}


            }
        }
    </script>

{% endblock %}
