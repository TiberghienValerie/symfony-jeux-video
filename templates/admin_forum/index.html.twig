{% extends 'layout/back.html.twig' %}

{% block title %}Liste des forums {% endblock %}
{% block body %}
    <div class="container">
        <div class=" card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="row p-2">
                    <div class="col">
                        {{ form_row(form.objet) }}
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col">
                        {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Rechercher' }) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <a class="m-2 btn btn-primary" href="{{ path('admin_forum_add')}}">Add a new Forum</a>
        <div class="count">
            <h3> Number of Forum : {{ pagination.getTotalItemCount }} </h3>
        </div>
        <table class="table table-hover table-success table-striped">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for forum in pagination %}
                <tr>
                    <td>
                        <a href="{{ path('admin_forum_read', {'id': forum.id}) }}">{{ forum.title }}</a>
                    </td>
                    <td>
                        <a class="m-2 btn btn-primary" href="{{ path('admin_forum_update', {'id': forum.id}) }}">Update</a>
                        <a class="m-2 btn btn-danger" href="{{ path('admin_forum_delete', {'id': forum.id}) }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
