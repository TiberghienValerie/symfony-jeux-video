{% extends 'layout/back.html.twig' %}
{% block title %}Add a new forum {% endblock %}
{% block body %}

<div class="container">
    <a class="btn btn-primary" href="{{ path('admin_forum') }}">Retour</a>
    <div class="m-2 container card">
        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row p-2">
            <div class="col">
                {{ form_row(form.title) }}
            </div>
        </div>












        <div class="row p-2">
            <div class="col">
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}, 'label': 'Add' }) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
